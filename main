local HttpService = game:GetService("HttpService")

-- ВСТАВЬ сюда свой токен бота
local botToken = "7764111611:AAE6kjNixuujH5eQhuehKUUzIHlOsHbhhqo"

-- ID пользователя (или чата), которому хочешь отправить сообщение
local userId = "1426122866"

-- Текст сообщения
local message = "Привет! Это сообщение из Roblox :)"

-- Формируем URL API запроса
local url = "https://api.telegram.org/bot" .. botToken .. "/sendMessage"

-- Данные запроса
local data = {
    chat_id = userId,
    text = message
}

-- Преобразуем данные в JSON
local jsonData = HttpService:JSONEncode(data)

-- Отправляем POST запрос
local success, response = pcall(function()
    return HttpService:PostAsync(url, jsonData, Enum.HttpContentType.ApplicationJson, false)
end)

if success then
    print("Сообщение отправлено:", response)
else
    warn("Ошибка при отправке:", response)
end
